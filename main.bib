file = {:Users/erin/Library/Application Support/Mendeley Desktop/Downloaded/Kiene, Slezak - 2006 - Low dissolved DMSP concentrations in seawater revealed by small volume gravity filtration and dialysis sampling.pdf:pdf},
issn = {15415856},
