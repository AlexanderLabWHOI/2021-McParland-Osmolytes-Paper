journal = {Aquatic Microbial Ecology},
keywords = {Compatible solute,DMSP function,DMSP retention,Osmolarity,Osmolyte,Salinity stress,Salt inhibition,Sulfur cycle},
number = {2},
pages = {133--147},
title = {{Osmoprotective role of dimethylsulfoniopropionate (DMSP) for estuarine bacterioplankton}},
volume = {76},
year = {2015}
