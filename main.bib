@ARTICLE{Maas2020,
AUTHOR={Maas, Amy E. and Liu, Shuting and Bolaños, Luis M. and Widner, Brittany and Parsons, Rachel and Kujawinski, Elizabeth B. and Blanco-Bercial, Leocadio and Carlson, Craig A.},   
TITLE={Migratory Zooplankton Excreta and Its Influence on Prokaryotic Communities}, 
JOURNAL={Frontiers in Marine Science},      
